{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": "v1Compatible"
  },
  "productName": "lemon-tools",
  "version": "0.0.1",
  "identifier": "com.tauri.lemon",
  "plugins": {},
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "security": {
      "assetProtocol": {
        "scope": ["**"],
        "enable": true
      },
      "capabilities": [
        {
          "identifier": "my-capability",
          "description": "My application capability used for all windows",
          "windows": ["*"],
          "permissions": [
            "path:default",
            "event:default",
            "window:default",
            "app:default",
            "resources:default",
            "menu:default",
            "tray:default",
            "notification:allow-is-permission-granted",
            "notification:default",
            "webview:allow-create-webview-window",
            "window:allow-close",
            "window:allow-start-dragging"
          ]
        }
      ],
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; media-src 'self' asset: https://asset.localhost; style-src 'unsafe-inline' 'self'; connect-src ipc: http://ipc.localhost"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "lemon tools",
        "width": 1200,
        "height": 900,
        "transparent": false
      }
    ]
  }
}
